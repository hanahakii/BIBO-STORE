
<table class="table bg-light p-4 mt-3 mb-3 text-center">

<tr>
    <th colspan="5">
        <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/car/sort/asc">A->Z</option>
            <option value="/car/sort/desc">Z->A</option>
        </select>
    </th>
    <th colspan="1">
        <form action="/car/search" method="post">
            <div class="form-group">
                <input class="form-control" type="search" name="name" placeholder="Search by name">
            </div>
        </form>
    </th>
    <th>
        <a class="btn btn-primary " href="/car/add">ADD</a>
        <a class="btn btn-success " href="/car/drop" onclick="return confirm('Are you sure to drop all car ?');">DROP</a>
    </th>
</tr>
       
    
   
</table>
<h3 class="text-primary text-center" colspan="5">car List</h3>
    
